{
  "name": "hy-social",
  "version": "1.0.0",
  "main": "src/index.ts",
  "author": "Max Koloskov <koloskov.maxim@mail.ru>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "dist": "yarn build && yarn run-dist",
    "build": "rimraf ./dist && tsc",
    "run-dist": "TS_NODE_BASEURL=./dist node -r tsconfig-paths/register ./dist/index.js",
    "db-migrate": "npx db-migrate --config database.json -e common",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "db-migrate": "^0.11.13",
    "db-migrate-mysql": "^2.2.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "mysql2": "^2.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  }
}
